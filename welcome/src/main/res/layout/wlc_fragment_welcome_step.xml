<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relatitvelayout_fragmentwelcome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    android:padding="8dp">

    <View
        android:id="@+id/dummyTop"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/textview_fragmentwelcomestep_title"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-medium"
        android:textAlignment="center"
        android:paddingBottom="24dp"
        android:textSize="30sp"
        tools:text="Â¡Juega lo que quieras! Conn un texto muy muy extenso" />

    <ImageView
        android:id="@+id/imageview_fragmentwelcomestep"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50"
        android:scaleType="fitCenter"
        android:layout_gravity="center_vertical|center_horizontal"
        android:contentDescription="@string/wlc_imageview_fragmentwlecomestep_description_logo"
        tools:src="#123132"/>

    <TextView
        android:id="@+id/textview_fragmentwelcomestep_description"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:paddingTop="8dp"
        android:textSize="20sp"
        android:textAlignment="center"
        tools:text="android lib weblcome tiene un catalogo muy extenso!" />

    <View
        android:id="@+id/dummyBottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:visibility="invisible"/>

</LinearLayout>